@article{arifin2023pioneering,
  title = {A Pioneering Study on Measuring Poverty in the Hydrocarbon-Rich State of {{Brunei Darussalam}}},
  author = {Arifin, Evi Nurvidya and Ananta, Aris and Musa, Siti Fatimahwati Pehin Dato and Hoon, Chang-Yau},
